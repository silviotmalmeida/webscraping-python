sudo docker run -it ubuntu:20.04

    apt update

    apt install python3.8 python3.8-dev python3-pip wget imagemagick -y

    sed -i '/disable ghostscript format types/,+6d' /etc/ImageMagick-6/policy.xml

    sed -i 's/name="width" value="16KP/name="width" value="32KP/g' /etc/ImageMagick-6/policy.xml

    sed -i 's/name="height" value="16KP/name="height" value="32KP/g' /etc/ImageMagick-6/policy.xml

    pip3 install requests

    pip3 install beautifulsoup4

    exit

sudo docker commit (id do container obtido em sudo docker ps -a) webscrapping-python

sudo docker save webscrapping-python > webscrapping-python.tar
